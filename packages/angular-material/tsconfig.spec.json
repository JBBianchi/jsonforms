{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "inlineSourceMap": true,
    "sourceMap": true,
    "types": [
      "jasmine"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "files": ["./src/index.ts"],
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "strictMetadataEmit": true,
    "generateCodeForLibraries": false,
    "skipTemplateCodegen": true
  }
}
